<div class="jumbotron">
  <div class="row">
      <div class="col-xs-6 center-block">
        <%= image_tag('octocat.png', calss: 'img-responsive', size: '40x40') %>
        <%= link_to button_tag('Login via Github', class: 'btn btn-primary'), '/auth/github' %>
      </div>
      <div class="col-xs-4 col-xs-offset-2">
        <h1>Login</h1>

    </div>

    <%= form_tag login_path, :html => { :class => "form-horizontal" } do %>

      <div class="form-group">
        <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :email, nil, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag(:password, nil, :class => "col-sm-2 control-label") %>
        <div class="col-sm-10">
          <%= password_field_tag :password, nil, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag 'Login', :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= link_to root_path, :class => 'btn btn-default col-sm-offset-2' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>

    </div>
  </div>
</div>



